{
    "version": "0.2.0",
    "configurations": [
    {
        "name": "HO debug",
        "type": "go",
        "request": "launch",
        "mode": "debug",
        "cwd": "${workspaceFolder}",
        "program": "${workspaceFolder}/hypershift-operator",
        "args": [
            "run",
            "--namespace=${env:MY_NAMESPACE}",
            "--pod-name=${env:MY_NAME}",
            "--metrics-addr=:9000",
            "--enable-ocp-cluster-monitoring=false",
            "--enable-ci-debug-output=false",
            "--private-platform=None",
            "--cert-dir=/var/run/secrets/serving-cert",
            "--registry-overrides=quay.io/openshift-release-dev/ocp-v4.0-art-dev=registry.ng.bluemix.net/armada-master/ocp-release"
        ],
        "env": {
            "MY_VAR":"123",
            "MY_VAR_TOO":"ho-ho-ho"
        }
    }
    ]
}
